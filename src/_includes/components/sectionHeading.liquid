
{% if content.sectionTitle.title %}
    {% assign sectionTitle = content.sectionTitle.title %}
{% endif %}
{% if content.sectionTitle.text %}
    {% assign sectionText = content.sectionTitle.text %}
{% endif %}

<div class="section section--header">
    <div class="container">
        <h2>{{ sectionTitle }}</h2>
        
        {% if sectionText %}
            <p>{{ sectionText }}</p>
        {% endif %}
    </div>
</div>