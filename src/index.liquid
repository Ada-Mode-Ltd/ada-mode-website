<section class="section blue">
  <div class="container">
    <div class="sectors__grid">
      <div>
        <h2 class="heading-2">Sectors we work in</h2>
        <a
          href="industries.html"
          class="sectors__button sectors__button--top am-button am-button--green-outline">
          <span>Learn more  →</span>
        </a>
      </div>
      <div>
        <ul class="sectors__list">
          {% for industry in allIndustries %}
            {% capture imgUrl %}{% sanityImageUrl industry.logo %}{% endcapture %}
            <li class="sectors__item">
                <img
                    src="{{ imgUrl }}"
                    loading="lazy"
                    width="45"
                    alt=" "
                    class="sector-icon">
                <p class="heading-4">{{ industry.title }}</p>
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
    <a
      href="industries.html"
      class="sectors__button sectors__button--bottom am-button am-button--green-outline">
      <span>Learn more  →</span>
    </a>
  </div>
</section>
<div class="section">
  <div class="container">
    <div class="humans__grid">
      <div class="humans__img-wrapper">
      <img
        src="/images/home-data-science-and-DT.jpg"
        loading="lazy"
        srcset="/images/home-data-science-and-DT-p-1080.jpeg 1080w, /images/home-data-science-and-DT-p-1600.jpeg 1600w, /images/home-data-science-and-DT-p-2000.jpeg 2000w, /images/home-data-science-and-DT-p-2600.jpeg 2600w, /images/home-data-science-and-DT.jpg 3000w"
        sizes="(max-width: 479px) 86vw, (max-width: 767px) 100vw, (max-width: 991px) 68vw, 674.6484375px"
        alt="Red haired lady looking at multiple screens with code" >
      </div>
      <div>
        <h2 class="heading-2">Data science and digital transformation</h2>
        <p>Supporting operators with AI adoption, digital twin strategy and analytical support for complex operational problems</p>
        <a href="services.html" class="humans__button am-button">Find Out More</a>
      </div>
    </div>
  </div>
</div>
<section class="section grey">
  <div class="container container--sm">
    <div class="humans__grid">
      <h2 class="heading-3">Meet the humans behind the AI</h2>
      <div>
        <p>Our people have worked on some of the most challenging projects across the renewable energy, civil nuclear and manufacturing sectors.</p>
        <a href="/about-us/" class="humans__button am-button am-button--green-outline">
          <span>Learn more   →</span>
        </a>
      </div>
    </div>
  </div>
</section>
{% if allPosts.data %}
  <section class="section">
    <div class="container">
      <h3 class="heading-3 collection__heading">Recent blog posts</h3>
      <ul role="list" class="collection__list">
        {% for post in allPosts.data limit: 3 %}
          {% capture imgUrl %}{% sanityImageUrl post.mainImage %}{% endcapture %}
          <li
            class="collection__item">
            <div class="collection__img-wrapper">{% image imgUrl , '' %}</div>
            <div class="collection__item-content">
              <p class="pretitle collection__pretitle">
                {% assign category = post.categories | first %}
                <span>{{ category.title }}</span>
                <span> | {{ post.publishedAt | date: "%B %d, %Y" }}</span>
              </p>
              <h4 class="collection__post-heading">{{ post.title }}</h4>
              <a href="/blog/{{post.slug.current}}" class="collection__item-button am-button am-button--sm am-button--green-outline">Read more</a>
            </div>
          </li>
        {% endfor %}
      <ul>
    </div>
  </section>
{% endif %}
