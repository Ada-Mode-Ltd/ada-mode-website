    "@sanity/client": "^3.4.1",
    "@sanity/image-url": "^1.0.1",
    "@slightlyoff/lite-vimeo": "^0.1.2",
    "body-scroll-lock": "^4.0.0-beta.0",
    "dayjs": "^1.11.5",
    "del-cli": "^5.1.0",
